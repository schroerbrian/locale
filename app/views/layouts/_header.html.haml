.header-div
  %header.bck.light.main-header
    %nav.view-links
      = link_to root_path do 
        %h3.title LOCALE
      %div.signed-in-status
        = link_to "#" do  
          %span.icon.menu.hamburger
        %nav.hamburger-menu
          - if current_user
            %ul.signed-in-menu
              %li
                %span #{current_user.name}
              %li
                = link_to "About Us", "/about"
              %li
                = link_to "Sign out", signout_path
          - else
            %ul.signed-out-menu
              %li 
                = link_to "About Us", "/about"  
              %li
                = link_to "Sign in with Facebook", "/auth/facebook"
              %li  
                = link_to "Sign in with Google", "/auth/google_oauth2"
      %ul.link-display
        = link_to "/foursquare" do 
          %li.header-links.foursquare-header-link 
            %span.icon-foursquare.header
        = link_to "/instagram" do 
          %li.header-links.instagram-header-link 
            %span.icon.camera-retro.header 
        = link_to "/map" do 
          %li.header-links.map-header-link
            %span.icon.map-marker.header      
        = link_to "/posts" do
          %li.header-links.post-header-link 
            %span.icon.list-alt.header
        = link_to "/twitter" do 
          %li.header-links.twitter-header-link 
            %span.icon.twitter-sign.header
